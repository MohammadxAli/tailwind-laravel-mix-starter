    "autoprefixer": "^10.3.0",
    "bootstrap": "^5.0.2",
    "browser-sync": "^2.27.1",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cssnano": "^5.0.6",
    "jquery": "^3.6.0",
    "laravel-mix": "^6.0.25",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
